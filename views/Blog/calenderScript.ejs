<script>//思路就是：先在index.js中把按照月份的内容查出来得到对象组，然后根据对象组用forEach查出对应天的count是否不为0//或者在model中写静态方法
    $(function (){
        // 创建
        $('<div class="calender"> \
                            <a href="javascript:;" class="prev">&lt;</a> \
                            <a href="javascript:;" class="next">&gt;</a> \
                            <span class="title">xxxx</span> \
                            <ol> \
                                <li>一</li> \
                                <li>二</li> \
                                <li>三</li> \
                                <li>四</li> \
                                <li>五</li> \
                                <li>六</li> \
                                <li>日</li> \
                            </ol> \
                            <ul> \
                            </ul> \
	                        </div>').appendTo($('.mycalender'));

        // 获取元素
        var oDiv=$('.calender');
        var oSpan=oDiv.find('.title');
        var oUl=oDiv.find('ul');
        var oPrev=oDiv.find('.prev');
        var oNext=oDiv.find('.next');
        var now=0;

        // 本月
        create();

        // 下个月
        oNext.click(function (){
            now++;

            create();
        });

        // 上个月
        oPrev.click(function (){
            now--;

            create();
        });
        function create()
        {
            oUl.html('');
            // 处理span日期  2015年1月
            var oDate=new Date();
            oDate.setMonth(oDate.getMonth()+now, 1);
            var y=oDate.getFullYear();
            var m=oDate.getMonth()+1;
            oSpan.html('<em>'+y+'</em>年<em>'+m+'</em>月');

            // 空的
            var oDate=new Date();
            oDate.setMonth(oDate.getMonth()+now, 1);
            oDate.setDate(1); // 把oDate设置成这个月第一天
            var d=oDate.getDay();
            d= d==0 ? 7 : d;
            for (var i=0; i<d-1; i++)
            {
                $('<li><a href=javascript:;></a></li>').appendTo(oUl);
            }

            // 创建日期
            var oDate=new Date();
            oDate.setMonth(oDate.getMonth()+now, 1);
            oDate.setMonth(oDate.getMonth()+1, 1);
            oDate.setDate(0);
            var total=oDate.getDate();

            for (var i=0; i<total; i++)
            {
                //if(所在日期没有文章){直接返回没有链接的<li>标签}，否则返回有链接的标签
                $('<li><a href="javascript:;">'+(i+1)+'</a></li>').appendTo(oUl);
            }

//                                加class
            var oDate=new Date();
            var today=oDate.getDate();
            var aLi=oUl.children();
            if (now == 0)
            {
                for (var i=0; i<aLi.length; i++)
                {
                    if (aLi.eq(i).find('a').html() == today) // 今天
                    {
                        aLi.eq(i).find('a').addClass('today');
                    }
                    else if (aLi.eq(i).find('a').html() < today)
                    {
                        aLi.eq(i).addClass('past');
                    }
                }
            }
            else if (now < 0)
            {
                aLi.addClass('past');
            }

            var aCalDate = $('.calender ul a');
            var oTit = $('.calender .title em');
            var year =  oTit.eq(0).html();
            var mon =  oTit.eq(1).html();
            for(var i=0;i<aCalDate.length;i++){
                var date =  aCalDate.eq(i).html();
                aCalDate.eq(i).attr('href','/'+window.location.toString().split('/')[3]+'/?calenderdate='+mon+'/'+date+'/'+year);
                //aCalDate.eq(i).attr('href','/'+=user.name+'/?'+mon+'/'+date+'/'+year);这里必须对href后边的第一个‘/’加上，因为不加的话，会把后边的
                //第一个参数作为了host也就是localhost：3000
            }
        }


    });
    //********注意：这里生意@kevinfuture写的分页的脚本********
    $(document).ready(function() {
        if($("#pagination")){
            var pagecount = <%= essaycount %>;
            var pagesize = 10;
            var currentpage = <%= currentpages %>;
//            var pagecount =39;
//            var pagesize = 13;
//            var currentpage = 2;
            var counts,pagehtml="";
            var length = pagecount/pagesize;
            if(pagecount%pagesize==0){
                counts = parseInt(pagecount/pagesize);
            }else{
                counts = parseInt(pagecount/pagesize)+1;
            }
            //只有一页内容
            if(pagecount<=pagesize){pagehtml="";}
            //大于一页内容
            if(pagecount>pagesize){
                if(currentpage!=1){
                    pagehtml+= '<li><a href="/<%=user.name%>/?calenderdate=<%=calenderdate%>&page='+(currentpage-1)+'">上一页</a></li>';
                }
                for(var i=0;i<counts;i++){
                    if(i>=(currentpage-(length+1)) && i<(currentpage+(length-1))){
                        if(i==currentpage-1){
                            pagehtml+= '<li class="active"><a href="/<%=user.name%>/?calenderdate=<%=calenderdate%>&page='+(i+1)+'">'+(i+1)+'</a></li>';
                        }else{
                            pagehtml+= '<li><a href="/<%=user.name%>/?page='+(i+1)+'">'+(i+1)+'</a></li>';
                        }

                    }
                }
                if(currentpage<counts){
                    pagehtml+= '<li><a href="/<%=user.name%>/?calenderdate=<%=calenderdate%>&page='+(currentpage+1)+'">下一页</a></li>';
                }
            }
            $("#pagination").html(pagehtml);
        }
    });
</script>