            <ul class="clearfix">
                <li>
                    <% if(newUserList){%>
                        <%newUserList.forEach(function(value,index,array){%>
                             <a href='javascript:void(0)' title="新人"><img class="media-object" src="<%=array[index].headPic==null?"/images/nopic.jpg":array[index].headPic%>" /></a>
                        <%});%>
